<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="2dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgSong"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:src="@drawable/img_song"
        app:riv_corner_radius="@dimen/dp_10" />

    <TextView
        android:id="@+id/tvTitleSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvNameSinger"
        android:layout_alignStart="@id/imgSong"
        android:layout_marginStart="@dimen/dp_20"
        android:lines="1"
        android:text="@string/title_song"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tvNameSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imgSong"
        android:layout_alignBottom="@id/imgSong"
        android:layout_marginStart="@dimen/dp_20"
        android:text="@string/singer"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_20"/>




</RelativeLayout>
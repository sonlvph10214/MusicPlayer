<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.account.SignInFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_spotify"
        android:layout_margin="@dimen/dp_36"
        app:layout_constraintTop_toTopOf="parent"
        />


    
    <RelativeLayout
        android:id="@+id/relativeSpotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_36"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/custom_sign_in_apple"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@id/tvSigInSpotify"
            android:src="@drawable/ic_spotify" />


        <TextView
            android:id="@+id/tvSigInSpotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/continue_with_spotify"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

   

</androidx.constraintlayout.widget.ConstraintLayout>
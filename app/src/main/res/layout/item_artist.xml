<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_bg_view_item"
    android:padding="@dimen/dp_12">

    <TextView
        android:id="@+id/tvArtistItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_song"
        android:textSize="@dimen/sp_14"
        android:lines="1"
        android:textColor="@color/black"
        android:layout_below="@id/imgArtist"
        android:layout_centerInParent="true"/>



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgArtist"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        app:riv_corner_radius="@dimen/dp_60"
        android:src="@drawable/img_song" />

</RelativeLayout>